#!/bin/sh

set -e

PROG=/usr/X11R6/bin/cxtermgb
PACKAGE=cxterm-gb

case "$1" in
  configure)
     if [ -d /usr/doc -a ! -e /usr/doc/$PACKAGE \
         -a -d /usr/share/doc/$PACKAGE ]; then
             ln -sf ../share/doc/$PACKAGE /usr/doc/$PACKAGE
     fi ;;
  abort-upgrade|abort-remove|abort-deconfigure) exit 0 ;;
  *)
    echo "ERROR: cxterm postinst called with unknown argument \"$1\"."
    echo "Aborting configuration of cxterm package."
    exit 1 ;;
esac

update-alternatives --install /usr/X11R6/bin/cxterm cxterm $PROG 10

#DEBHELPER#

exit 0
